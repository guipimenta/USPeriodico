@model IEnumerable<USPeriodico.Models.Estagio>


@{
    ViewBag.Title = "Listar";
    if(ViewBag.NoID == false && ViewBag.ID != null)
    {
        Layout = "~/Views/Base/_logadoBase.cshtml";
    } else {
        Layout = "~/Views/Base/_usuarioComumBase.cshtml";
    }
    
}
<h2>Listar estágios</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th>Detalhes</th>
    </tr>
    
         @foreach(USPeriodico.Models.Estagio estagio in Model){
            <tr>
                <td>@estagio.ID</td>
                <td>@estagio.BreveDescricao</td>
                
                @if (ViewBag.ID == estagio.EmpresaID)
                {
                    <td><a href="Editar?id=@estagio.ID">Modificar</a></td>
                }
                else
                {
                    <td><a href="Detalhar?ID=@estagio.ID">Detalhar</a></td>
                }
            </tr>
         }
    
   
</table>