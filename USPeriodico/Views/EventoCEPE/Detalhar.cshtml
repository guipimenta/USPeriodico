@model USPeriodico.Models.EventoCEPE

@{
    ViewBag.Title = "Detalhar";
    if(ViewBag.NoID == false)
    {
        Layout = "~/Views/Base/_logadoBase.cshtml";
    } else {
        Layout = "~/Views/Base/_usuarioComumBase.cshtml";
    }
    
}

<h2>Detalhes: @Model.Nome</h2>

<div class="container" style="width: 75%;">
        <div class ="hero-unit">
            @Model.Nome <br />
            @Model.Esporte<br />
            @Model.Data<br />
            @Model.Horario<br />
            @Model.Local<br />
            @Model.Descricao<br />
            
        </div>
</div>