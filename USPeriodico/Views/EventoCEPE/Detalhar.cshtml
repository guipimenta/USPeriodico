@model USPeriodico.Models.EventoCEPE

@{
    ViewBag.Title = "Detalhar";
    if(ViewBag.NoID == false)
    {
        Layout = "~/Views/Base/_logadoBase.cshtml";
    } else {
        Layout = "~/Views/Base/_usuarioComumBase.cshtml";
    }
    
}


<div class="modal-header">
    <button type = "button" class="close" data-dismiss="modal">X</button>
</div>
<div class="modal-body">
  <dl class="dl-horizontal">
    <dt>Nome</dt>
    <dd>@Model.Nome</dd>
    <dt>Esporte</dt>
    <dd>@Model.Esporte</dd>
    <dt>Horário</dt>
    <dd>@Model.Horario</dd>
    <dt>Data</dt>
    <dd>@Model.Data.Day/@Model.Data.Month/@Model.Data.Year</dd>
    <dt>Local</dt>
    <dd>@Model.Local</dd>
    <dt>Descrição</dt>
    <dd>@Model.Descricao</dd>
  </dl>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
</div>