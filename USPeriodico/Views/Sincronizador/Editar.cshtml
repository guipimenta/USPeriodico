@model USPeriodico.Models.Timer

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Base/_logadoBase.cshtml";
}
<div class="container" style="width: 75%;">
        <div class ="hero-unit">
           <h1 align="center">Editar timer</h1><br>
            <form class="form-horizontal" action="Editar" method="post" >
                            @if (ViewBag.mensagemErro != null)
                            {
                                @ViewBag.mensagemErro;
                            }
                    
                
                            <input type="text" name="ID" id="ID" value="@Model.Id" style="display:none" />

                            <div class="control-group">
                                <label class="control-label" for="Horario">Horario:</label>
                                <div class="controls">
                                    <input type="text" id="Horario"  name="Horario" value="@Model.Horario">
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="Frequencia">Frequência:</label>
                                <div class="controls">
                                    <input type="text" id="Frequencia"  name ="Frequencia" value="@Model.Frequencia">
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-warning">Modificar</button>
                                </div>
                            </div>
                        </form>

                         <form action="Deletar" method="post">
                             <input type="text" name="Id" value="@Model.Id" style="display:none">
                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-warning">Deletar</button>
                                </div>
                            </div>
                        </form>
    </div>
</div>