@model USPeriodico.Models.Usuarios

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Base/_usuarioComumBase.cshtml";
}

 <div class="container" style="width: 50%;">
        <div class ="hero-unit">
            <h1 align="center">Entrar</h1><br>
            <form class="form-horizontal" action="Login" method="post" >
                <div class="control-group">
                    <label class="control-label" for="inputEmail">Email</label>
                    <div class="controls">
                        <input type="text" id="inputEmail" placeholder="Email" name="username">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputSenha">Senha</label>
                    <div class="controls">
                        <input type="password" id="inputSenha" placeholder="Senha" name="password">
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <label class="checkbox">
                            <input type="checkbox"> Lembrar Senha
                        </label>
                        <button type="submit" class="btn btn-warning">Entrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>