@{
    ViewBag.Title = "Criar Cadastro";
    Layout = "~/Views/Base/_usuarioComumBase.cshtml";
}

<div class="container" style="width: 75%;">
        <div class ="hero-unit">
           
            <h1 align="center">Cadastrar</h1><br>
             @if (ViewBag.alert == true)
            {
                <div class="alert alert-error">
                    @ViewBag.mensagemErro
                </div>
            }
            <form class="form-horizontal" action="CriarEmpresa" method="post" >
                <div class="control-group">
                    <label class="control-label" for="inputNome">Nome</label>
                    <div class="controls">
                        <input type="text" id="inputNome" placeholder="Nome" name="nome">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputEndereco">Endereço</label>
                    <div class="controls">
                        <input type="text" id="inputEndereco" placeholder="Endereco" name="endereco">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputDescricao">Descricao</label>
                    <div class="controls">
                        <input type="text" id="inputDescricao" placeholder="Descricao" name="descricao">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputTelefone">Telefone</label>
                    <div class="controls">
                        <input type="text" id="inputTelefone" name="telefone" placeholder="Telefone">
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-warning">Cadastrar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


